@{
}
@model AddEmployee;
<form method="post" action="employee/addEmployee" enctype="multipart/form-data">
<div class="row">
    <div class="row">
        <div class="col-sm-3 pb-3">Name</div>
        <div class="col-sm-6 pb-3"><input type="text" asp-for="Name" class="form-control" /></div>
    </div>
    <div class="row">
        <div class="col-sm-3 pb-3">Email</div>
        <div class="col-sm-6 pb-3"><input type="text" asp-for="Email" class="form-control" /></div>
    </div>
    <div class="row">
        <div class="col-sm-3 pb-3">Password</div>
        <div class="col-sm-6 pb-3"><input type="text" asp-for="Password" class="form-control" /></div>
    </div>
    <div class="row">
        <div class="col-sm-3 pb-3">Role Name</div>
        <div class="col-sm-6 pb-3"><input type="text" asp-for="RoleName" class="form-control" /></div>
    </div>
    <div class="row">
        <div class="col-sm-3 pb-3">Phone</div>
        <div class="col-sm-6 pb-3"><input type="text" asp-for="Phone" class="form-control" /></div>
    </div>
    <div class="row">
        <div class="col-sm-3 pb-3">Document Name</div>
        <div class="col-sm-6 pb-3"><input type="text" asp-for="DocumentName" class="form-control" /></div>
    </div>
    <div class="row">
        <div class="col-sm-3 pb-3">Document Name</div>
        <div class="col-sm-6 pb-3"><input type="file" asp-for="Upload"  class="form-control" /></div>
    </div>
    <div class="row">
        <div class="col-sm-3 pb-3"></div>
        <div class="col-sm-6 pb-3"><input type="submit" class="btn-primary" />Add Employee</div>
    </div>
</div>
</form>

